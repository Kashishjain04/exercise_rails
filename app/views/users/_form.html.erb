<%= form_with(model: user) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'text-dark fw-semibold mb-1' %>
    <%= form.text_field :name,
                        placeholder: t('.enter_name'),
                        class: 'form-control form-control-lg bg-transparent fs-6 py-3 rounded-3',
                        required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: 'd-block text-dark fw-semibold mb-1' %>
    <%= form.email_field :email,
                         placeholder: t('.enter_email'),
                         class: 'form-control form-control-lg bg-transparent fs-6 py-3 rounded-3',
                         required: true %>
  </div>

  <div class="grid gap-1 mb-4">
    <%= form.label t('.currency_preference'), class: 'text-capitalize g-col-12 text-dark fw-semibold mb-1' %>
    <% User::CURRENCIES.each_with_index do |currency, i| %>
      <%= form.radio_button :preferred_currency,
                            currency,
                            class: 'btn-check',
                            checked:
                              currency == ("INR")

      %>
      <%= form.label "preferred_currency_#{currency.downcase}",
                     currency,
                     class: 'btn fs-6 g-col-4' %>
    <% end %>
  </div>

  <div class="mb-3">
    <%= button_tag t('.continue'),
                   type: 'submit',
                   class: 'mt-3 lh-sm btn btn-lg btn-primary w-100 px-3 py-2 rounded-2',
                   'data-appointment-target': 'payButton' %>
  </div>
<% end %>
